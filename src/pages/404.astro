---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`404 - ${SITE_TITLE}`} description="Page not found" />
	</head>
	<body>
		<Header />
		<main class="w-full max-w-3xl mx-auto px-4 py-8 min-h-[60vh] flex items-center">
			<section class="w-full">
				<div class="bg-white border-4 border-black shadow-[8px_8px_0px_0px_#000] p-8 md:p-12">
					<h1 class="text-4xl md:text-6xl font-black text-black mb-4">404</h1>
					<h2 class="text-xl md:text-2xl font-bold text-black mb-6">Page Not Found</h2>
					<p class="text-gray-700 mb-8">
						The page you're looking for doesn't exist or has been moved.
					</p>

					<div class="space-y-4">
						<div>
							<p class="text-sm text-gray-700 font-semibold uppercase tracking-wide mb-2">Navigate to</p>
							<div class="space-y-2">
								<div>
									<a href="/" class="inline-block text-blue-600 hover:underline font-bold">
										Home
									</a>
								</div>
								<div>
									<a href="/posts" class="inline-block text-blue-600 hover:underline font-bold">
										All Posts
									</a>
								</div>
								<div>
									<a href="/personal" class="inline-block text-blue-600 hover:underline font-bold">
										Personal
									</a>
								</div>
								<div>
									<a href="/technology" class="inline-block text-blue-600 hover:underline font-bold">
										Technology
									</a>
								</div>
								<div>
									<a href="/academics" class="inline-block text-blue-600 hover:underline font-bold">
										Academics
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
